---
import { Image } from "@astrojs/image/components";

import Layout from "@layouts/Layout.astro";

import MaxWidth from "@components/MaxWidth.astro";
import BlogList from "@components/BlogList.astro";

import { getBlogEntries } from "@lib/blog";

import mePic from "@assets/img/me-home-2.jpg";

const entries = getBlogEntries(await Astro.glob("../blog/**/*.mdx"));
---

<Layout
  title="home"
  description="Charles Vandevoorde, a software engineer from Belgium"
>
  <div class="bg-secondary">
    <MaxWidth class="md:grid md:grid-cols-[50%_50%] items-center gap-x-4 py-4">
      <div class="prose prose-zinc py-10">
        <h1 class="text-zinc-800 opacity-80 font-semibold">
          Hello, I'm Charles
        </h1>
        <p>
          I am a backend software engineer living near Brussels, Belgium. Being
          curious by nature, I always strive for learning new concepts and
          deepen my understanding of computer science. My interests are
          wide-ranging ranging going from frontend development and design to
          distributed systems passing by DevOps and automation. <a href="/about"
            >Find more about me</a
          >.
        </p>

